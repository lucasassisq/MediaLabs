# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

def shared_pods
  use_frameworks!
  pod 'Alamofire'
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'RxGesture'
end

target 'BaseApplication' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  shared_pods
  pod 'SwiftLint'
  # Pods for BaseApplication

end


target 'Core' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  shared_pods
  pod 'SwiftGen'
  pod 'SkyFloatingLabelTextField'
  # Pods for Core

end

target 'Main' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  shared_pods
  # Pods for Main

end
